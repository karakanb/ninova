{
  "manifest_version": 2,
  "name": "Ninova Hatırlatıcı",
  "description": "Bu eklenti İTÜ Ninova sistemindeki ödevleri kullanarak Chrome bildirimleri gönderir.",
  "version": "1.0",
  "background": {
    "persistent": false,
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ]
}